<tr class="user" id="<%= dom_id(user) %>">
  <td><%= link_to user.id, admin_user_path(user) %></td>
  <td><%= user.name %></td>
  <td><%= user.email %></td>
  <td><%=l user.created_at %></td>
  <td>
    <%= link_to t("helpers.actions.show"),
                admin_user_path(user), :class => 'btn btn-mini' %>
    <%= link_to t("helpers.actions.edit"),
                edit_admin_user_path(user), :class => 'btn btn-info btn-mini' %>
    <%= link_to t("helpers.actions.destroy"),
                admin_user_path(user), method: :delete, confirm: t('helpers.actions.confirm'), :class => 'btn btn-danger btn-mini' %>
  </td>
</tr>